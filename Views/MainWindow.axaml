<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CustomerDemo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CustomerDemo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CustomerDemo"
        PointerPressed="InputElement_OnPointerPressed">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="128,*">
        <Border Background="#121212"></Border>
        <StackPanel Grid.Column="0">
            <Button Width="100"
                    Margin="12"
                    HorizontalAlignment="Center"
                    Command="{Binding NavigateToHomeCommand}">
                <TextBlock Text="Home"
                           HorizontalAlignment="Center"/>
            </Button>

            <Button Width="100"
                    Margin="12,0,12,12"
                    HorizontalAlignment="Center"
                    Command="{Binding NavigateToClientsCommand}">
                <TextBlock Text="Clients"
                           HorizontalAlignment="Center"/>
            </Button>
            
            <Button Width="100"
                    Margin="12,0,12,12"
                    HorizontalAlignment="Center"
                    Command="{Binding NavigateToSettingsCommand}">
                <TextBlock Text="Settings"
                           HorizontalAlignment="Center"/>
            </Button>
        </StackPanel>
        
        <ContentControl Grid.Column="1"
                        Content="{Binding NavigationService.CurrentView}"/>
    </Grid>

</Window>
