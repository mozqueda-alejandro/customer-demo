<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CustomerDemo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CustomerDemo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Cimental Masonry Demo"
        x:Name="MainWindowControl"
        Focusable="True"
        PointerPressed="MainWindow_OnPointerPressed">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Assets/NavigationViewIcons.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <!-- <Grid ColumnDefinitions="Auto,*"> -->
        <ui:NavigationView  x:Name="NavigationViewMain" PaneDisplayMode="Left" OpenPaneLength="256" 
                           Content="{Binding NavigationService.CurrentView}">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem Content="Home" Tag="Home"
                                           IconSource="Home"/>
                    <ui:NavigationViewItemSeparator/>
                    <ui:NavigationViewItem Content="Dashboard" Tag="Dashboard"
                                           IconSource="ViewAll"/>
                
                    <ui:NavigationViewItem Content="Sales and Payments" SelectsOnInvoked="False"
                                           IconSource="{StaticResource PaymentCardIcon}">
                        <ui:NavigationViewItem.MenuItems>
                            <ui:NavigationViewItem Content="Estimates" Tag="Estimates"/>
                            <ui:NavigationViewItem Content="Invoices" Tag="Inovices"/>
                            <ui:NavigationViewItem Content="Clients" Tag="Clients"/>
                            <ui:NavigationViewItem Content="Inventory" Tag="Inventory"/>
                        </ui:NavigationViewItem.MenuItems>
                    </ui:NavigationViewItem>
                
                    <ui:NavigationViewItem Content="Purchases" SelectsOnInvoked="False"
                                           IconSource="{StaticResource ShoppingCartIcon}">
                        <ui:NavigationViewItem.MenuItems>
                            <ui:NavigationViewItem Content="Bills"/>
                            <ui:NavigationViewItem Content="Vendors"/>
                        </ui:NavigationViewItem.MenuItems>
                    </ui:NavigationViewItem>
                
                    <ui:NavigationViewItem Content="Accounting" IconSource="Library" SelectsOnInvoked="False">
                        <ui:NavigationViewItem.MenuItems>
                            <ui:NavigationViewItem Content="Transactions"/>
                            <ui:NavigationViewItem Content="Chart of Accounts"/>
                        </ui:NavigationViewItem.MenuItems>
                    </ui:NavigationViewItem>
                
                    <ui:NavigationViewItem Content="Payroll" IconSource="People" SelectsOnInvoked="False">
                        <ui:NavigationViewItem.MenuItems>
                            <ui:NavigationViewItem Content="Employees"/>
                            <ui:NavigationViewItem Content="Timesheets"/>
                            <ui:NavigationViewItem Content="Tax Forms"/>
                        </ui:NavigationViewItem.MenuItems>
                    </ui:NavigationViewItem>
                
                    <ui:NavigationViewItem Content="Reports"
                                           IconSource="{StaticResource ReportDocumentIcon}"/>
                    
                </ui:NavigationView.MenuItems>
                
                <ui:NavigationView.FooterMenuItems>
                    <ui:NavigationViewItem Content="Material Library"
                                           IconSource="{StaticResource ConstructionIcon}"/>
                    
                </ui:NavigationView.FooterMenuItems>
            </ui:NavigationView>
    <!-- </Grid> -->
    
</Window>
